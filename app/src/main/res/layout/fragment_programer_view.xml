<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Calculator.ProgrammerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050505"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0B0B0B">

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|right"
                android:inputType="text"
                android:longClickable="false"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="#E6E0E0"
                android:textDirection="ltr"
                android:textSize="46sp">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#151515">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/binary_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="BIN "
                    android:textColor="#D5C9C9"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:background="@null"
                    android:clickable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/binary_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="0"
                    android:textColor="#D5C9C9"
                    android:background="@null"
                    android:textSize="20sp"
                    android:longClickable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#151515">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/octal_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="OCT"
                    android:textColor="#D5C9C9"
                    android:textSize="18sp"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/octal_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="0"
                    android:textColor="#D5C9C9"
                    android:background="@null"
                    android:textSize="20sp"
                    android:longClickable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#151515">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/decimal_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="DEC "
                    android:textColor="#D5C9C9"
                    android:textSize="18sp"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/decimal_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="0"
                    android:textColor="#D5C9C9"
                    android:background="@null"
                    android:textSize="20sp"
                    android:longClickable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#151515">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/hexadecimal_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="HEX "
                    android:textColor="#D5C9C9"
                    android:textSize="18sp"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/hexadecimal_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="0"
                    android:textColor="#D5C9C9"
                    android:background="@null"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:longClickable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0.1dp"
            android:background="#2C2C2C">

            <Button
                android:id="@+id/button_A"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="A"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_B"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="B"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_C"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_D"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickMulti"
                android:text="D"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_E"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickDel"
                android:text="E"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_F"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickDel"
                android:text="F"
                android:textColor="#EEEFF4"
                android:textSize="26sp"
                android:background="#1C1C1C"
                android:layout_margin="0.1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_c"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="C"
                android:textColor="#2041FB"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_division"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="÷"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_multiply"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="×"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_del"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="⌫"
                android:textColor="#2041FB"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="−"
                android:textColor="#2041FB"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_plus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:onClick="onClickPlus"
                android:text="+"
                android:textColor="#2041FB"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:padding="0.1dp">
                    <Button
                        android:id="@+id/button_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_modlus"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="%"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_dot"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="."
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="#171717"
                android:padding="0.1dp">

                <Button
                    android:id="@+id/button_equal"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0F2BCA"
                    android:onClick="onClickEqual"
                    android:text="="
                    android:textColor="#D5C9C9"
                    android:textSize="32sp"
                    android:layout_margin="0.1dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>