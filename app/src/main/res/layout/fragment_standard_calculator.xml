<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Calculator.StandardCalculatorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050505"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|right"
                android:inputType="text"
                android:longClickable="false"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="#E6E0E0"
                android:textDirection="ltr"
                android:textSize="48sp">
            </EditText>

            <TextView
                android:id="@+id/autoSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:textSize="48sp"
                android:autoSizeMaxTextSize="48sp"
                android:autoSizeMinTextSize="24sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/final_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:paddingEnd="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_c"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="C"
                android:textColor="#2041FB"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_division"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="÷"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_multiply"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="×"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_del"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="⌫"
                android:textColor="#2041FB"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="−"
                android:textColor="#2041FB"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#171717"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_plus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:onClick="onClickPlus"
                android:text="+"
                android:textColor="#2041FB"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_modlus"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="%"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                    <Button
                        android:id="@+id/button_dot"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="."
                        android:textColor="#D5C9C9"
                        android:textSize="26sp"
                        android:background="#050505"
                        android:layout_margin="0.1dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="#171717"
                android:padding="0.1dp">

                <Button
                    android:id="@+id/button_equal"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0F2BCA"
                    android:onClick="onClickEqual"
                    android:text="="
                    android:textColor="#D5C9C9"
                    android:textSize="32sp"
                    android:layout_margin="0.1dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>