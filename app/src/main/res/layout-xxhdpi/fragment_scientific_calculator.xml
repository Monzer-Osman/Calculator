<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Calculator.ScientificFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050505"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="#0B0B0B">

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|right"
                android:inputType="text"
                android:longClickable="false"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="#E6E0E0"
                android:textDirection="ltr"
                android:textSize="46sp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/final_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="10dp"
                android:textColor="#D5C9C9"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#171717"
            android:orientation="horizontal"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_2_nd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="2^nd"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_pow_2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="x^2"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />


            <Button
                android:id="@+id/button_pow_n"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="x^(n)"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_squareRoot_2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="2√x"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_rand"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="rand"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#171717"
            android:orientation="horizontal"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_1_div_x"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="1/x"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />


            <Button
                android:id="@+id/button_abs"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="|x|"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_open_Parenthesis"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="("
                android:textColor="#EEEFF4"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_close_Parenthesis"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text=")"
                android:textColor="#EEEFF4"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_pi"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="π"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#171717"
            android:orientation="horizontal"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_inv"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="Inv"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_c"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="C"
                android:textColor="#2041FB"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_division"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="÷"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_multiply"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="×"
                android:textColor="#2041FB"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_del"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="⌫"
                android:textColor="#2041FB"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#171717"
            android:orientation="horizontal"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_cos"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>

            <Button
                android:id="@+id/button_9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#D5C9C9"
                android:textSize="26sp"
                android:background="#050505"
                android:layout_margin="0.1dp"/>


            <Button
                android:id="@+id/button_minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="−"
                android:textColor="#2041FB"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#171717"
            android:orientation="horizontal"
            android:padding="0.1dp">

            <Button
                android:id="@+id/button_sin"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="#EEEFF4"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#050505"
                android:text="4"
                android:textColor="#D5C9C9"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#050505"
                android:text="5"
                android:textColor="#D5C9C9"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#050505"
                android:text="6"
                android:textColor="#D5C9C9"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button_plus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#101010"
                android:onClick="onClickPlus"
                android:text="+"
                android:textColor="#2041FB"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#171717"
                    android:orientation="horizontal"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_tan"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textColor="#EEEFF4"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/button_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="1"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />

                    <Button
                        android:id="@+id/button_2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="2"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />

                    <Button
                        android:id="@+id/button_3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="3"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#171717"
                    android:orientation="horizontal"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_ln"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textColor="#EEEFF4"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/button_modlus"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="%"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />

                    <Button
                        android:id="@+id/button_0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="0"
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />

                    <Button
                        android:id="@+id/button_dot"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#050505"
                        android:text="."
                        android:textColor="#D5C9C9"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#171717"
                    android:orientation="horizontal"
                    android:padding="0.1dp">

                    <Button
                        android:id="@+id/button_log"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textColor="#EEEFF4"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/button_e"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="e"
                        android:textAllCaps="false"
                        android:textColor="#D5C9C9"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_x_fact"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textColor="#D5C9C9"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_exp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.1dp"
                        android:layout_weight="1"
                        android:background="#101010"
                        android:text="exp"
                        android:textAllCaps="false"
                        android:textColor="#D5C9C9"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#171717"
                android:orientation="horizontal"
                android:padding="0.1dp">

                <Button
                    android:id="@+id/button_equal"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:background="#0F2BCA"
                    android:onClick="onClickEqual"
                    android:text="="
                    android:textColor="#D5C9C9"
                    android:textSize="32sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>